<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#c2c0c0"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <ImageView
                android:id="@+id/profile_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_me"
                android:layout_width="180dp"
                android:layout_height="260dp"/>

        <TextView
                android:id="@+id/course"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Tecnologia em Análise e desenvolvimento de Sistemas"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/time"
                style="@style/StyleTextView"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/course"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Noturno"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/ra"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="RA: 1050481613016"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/rg"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/ra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="RG: 40.290.916-1"
                style="@style/StyleTextView"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/cpf"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/rg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="CPF: 448.701.068.33"
                style="@style/StyleTextView"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                app:layout_constraintTop_toBottomOf="@id/cpf"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Data de nascimento: 22/03/1996"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/expediton_time"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                app:layout_constraintTop_toBottomOf="@id/birthday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Data de expedição: 03/02/2019"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/expire_date"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                app:layout_constraintTop_toBottomOf="@id/expediton_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Validade: 31/12/2020"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/background"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/expire_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_logo"
                android:layout_marginBottom="16dp"
                android:layout_height="200dp"/>

        <TextView
                android:id="@+id/colle_name"
                android:layout_width="0dp"
                style="@style/StyleTextView"
                app:layout_constraintTop_toBottomOf="@id/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Faculdade de Tecnologia de Indaiatuba Dr. Archimedes Lammoglia"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
